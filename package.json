{
  "name": "warrity-api",
  "version": "1.0.0",
  "description": "API for Warrity Warranty Management System",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "lint": "eslint .",
    "build": "mkdir -p dist && cp -r src package.json package-lock.json .env.production index.html dist/ && echo '#!/bin/bash\ncd dist && npm ci --production && NODE_ENV=production PORT=8080 node index.js' > dist/start.sh && chmod +x dist/start.sh",
    "postbuild": "cd dist && cp .env.production .env",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop warrity-api",
    "restart:pm2": "pm2 restart warrity-api",
    "logs:pm2": "pm2 logs warrity-api",
    "security-check": "npm audit"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.0",
    "graphql": "^16.10.0",
    "graphql-playground-react": "^1.7.28",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.2.0",
    "ioredis": "^5.6.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.1",
    "morgan": "^1.10.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "pm2": "^5.3.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
